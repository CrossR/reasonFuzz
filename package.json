{
  "name": "reason-fuzzy-matching",
  "version": "0.0.1",
  "description": "Fuzzy string matching for ReasonML.",
  "esy": {
    "build": "refmterr dune build --root . -j4",
    "install": [
      "esy-installer reason-fuzzy-matching.install",
      "esy-installer RunTests.install"
    ]
  },
  "scripts": {
    "test": "esy x RunTests",
    "format": "esy dune build @fmt --auto-promote"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": ">=1.6.0",
    "@reason-native/console": "^0.0.3",
    "@reason-native/rely": "^1.2.0",
    "ocaml": "^4.7.0",
    "pesy": "*",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}